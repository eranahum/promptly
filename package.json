{
  "name": "text-saver-react",
  "version": "1.0.0",
  "description": "A React-based text saver app with SQLite database",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "react-scripts build",
    "dev": "concurrently \"npm:server:dev\" \"npm:client\"",
    "server:dev": "nodemon server.js",
    "client": "cross-env PORT=3002 react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "openai": "^4.20.1",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3"
  },
  "browserslist": {
    "production": [">0.2%","not dead","not op_mini all"],
    "development": ["last 1 chrome version","last 1 firefox version","last 1 safari version"]
  },
  "proxy": "http://localhost:3001"
}